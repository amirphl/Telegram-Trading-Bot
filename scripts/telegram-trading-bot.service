[Unit]
Description=Telegram Trading Bot
After=network.target
Wants=network.target

[Service]
Type=simple
User=amirphl
Group=amirphl
WorkingDirectory=/home/amirphl/telegram-trading-bot
Environment=PATH=/home/amirphl/telegram-trading-bot/venv/bin
ExecStart=/home/amirphl/telegram-trading-bot/venv/bin/python app.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/amirphl/telegram-trading-bot

# Resource limits
LimitNOFILE=65536
MemoryMax=1G

[Install]
WantedBy=multi-user.target 